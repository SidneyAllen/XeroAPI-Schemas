<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="LineItem"
    elementFormDefault="qualified"
    xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    targetNamespace="http://www.xero.com/LineItem" 
    xmlns:line="http://www.xero.com/LineItem"  
    xmlns:base="http://www.xero.com/BaseTypes">

  <xs:import schemaLocation="BaseTypes.xsd"
    namespace="http://www.xero.com/BaseTypes" /> 

  <xs:element name="LineItems" type="line:ArrayOfLineItem" />
  
  <xs:complexType name="ArrayOfLineItem">
    <xs:sequence>
      <xs:element minOccurs="0" maxOccurs="unbounded" name="LineItem" nillable="true" type="line:LineItem" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="LineItem">
    <xs:all>
      <xs:element minOccurs="0" maxOccurs="1" name="ValidationErrors" type="base:ArrayOfValidationError" />
      <xs:element minOccurs="0" maxOccurs="1" name="Warnings" type="base:ArrayOfWarning" />
      <xs:element minOccurs="0" maxOccurs="1" name="Description" type="xs:string" />
      <xs:element minOccurs="0" maxOccurs="1" name="UnitAmount" nillable="true" type="base:itemPrice" />
      <xs:element minOccurs="0" maxOccurs="1" name="TaxType" type="base:taxType" />
      <xs:element minOccurs="0" maxOccurs="1" name="TaxAmount" nillable="true" type="base:itemPrice" />
      <xs:element minOccurs="0" maxOccurs="1" name="LineAmount" nillable="true" type="base:itemPrice" />
      <xs:element minOccurs="0" maxOccurs="1" name="AccountCode" type="base:accountCode" />
      <xs:element minOccurs="0" maxOccurs="1" name="Tracking" type="line:ArrayOfTrackingCategory" />
      <xs:element minOccurs="0" maxOccurs="1" name="ItemCode" type="xs:string" />
      <xs:element minOccurs="0" maxOccurs="1" name="Quantity" nillable="true" type="base:itemQuantity" />
      <xs:element minOccurs="0" maxOccurs="1" name="DiscountRate" type="base:itemPrice" />
      <xs:element minOccurs="0" maxOccurs="1" name="LineItemID" type="base:uniqueIdentifier" />
    </xs:all>
    <xs:attribute name="status" type="base:entityValidationStatus" use="optional" />    
  </xs:complexType>
  
    <xs:element name="TrackingCategories" type="line:ArrayOfTrackingCategory" />
  
  <xs:complexType name="TrackingCategory">
    <xs:all>
      <xs:element minOccurs="0" maxOccurs="1" name="ValidationErrors" type="base:ArrayOfValidationError" />
      <xs:element minOccurs="0" maxOccurs="1" name="Warnings" type="base:ArrayOfWarning" />
      <xs:element minOccurs="1" maxOccurs="1" name="Name" type="xs:string" />
      <xs:element minOccurs="1" maxOccurs="1" name="TrackingCategoryID" type="base:uniqueIdentifier" />
      <xs:element minOccurs="1" maxOccurs="1" name="TrackingOptionID" type="base:uniqueIdentifier" />
      <xs:element minOccurs="0" maxOccurs="1" name="Option" type="xs:string" />    
    </xs:all>
  </xs:complexType>
  
  <xs:complexType name="ArrayOfTrackingCategory">
    <xs:sequence>
      <xs:element minOccurs="0" maxOccurs="unbounded" name="TrackingCategory" nillable="true" type="line:TrackingCategory" />
    </xs:sequence>
  </xs:complexType>

</xs:schema>
