<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="Attachment"
    elementFormDefault="qualified"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://www.xero.com/Attachment" 
    xmlns:attach="http://www.xero.com/Attachment"  
    xmlns:base="http://www.xero.com/BaseTypes">

   <xs:import schemaLocation="BaseTypes.xsd"
    namespace="http://www.xero.com/BaseTypes" />   

  <xs:element name="Attachments" type="attach:ArrayOfAttachment" />

  <!-- Attachments -->
  <xs:complexType name="ArrayOfAttachment">
    <xs:sequence>
      <xs:element minOccurs="0" maxOccurs="unbounded" name="Attachment" nillable="true" type="attach:Attachment" />
    </xs:sequence>
  </xs:complexType>
  
  <!-- Attachment -->
  <xs:complexType name="Attachment">
    <xs:all>
      <xs:element minOccurs="0" maxOccurs="1" name="ValidationErrors" type="base:ArrayOfValidationError" />
      <xs:element minOccurs="0" maxOccurs="1" name="Warnings" type="base:ArrayOfWarning" />
      <xs:element minOccurs="1" maxOccurs="1" name="AttachmentID" type="base:uniqueIdentifier" />
      <xs:element minOccurs="1" maxOccurs="1" name="FileName" type="xs:string" />
      <xs:element minOccurs="0" maxOccurs="1" name="Url" type="xs:anyURI" />
      <xs:element minOccurs="0" maxOccurs="1" name="MimeType" type="xs:string" />
      <xs:element minOccurs="0" maxOccurs="1" name="ContentLength" type="xs:integer" />
    </xs:all>
    <xs:attribute name="status" type="base:entityValidationStatus" use="optional" />
  </xs:complexType>
  
</xs:schema>