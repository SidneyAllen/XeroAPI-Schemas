<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="Account"
    elementFormDefault="qualified"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://www.xero.com/Account" 
    xmlns:acct="http://www.xero.com/Account"  
    xmlns:base="http://www.xero.com/BaseTypes" 
    xmlns:ccode="http://www.xero.com/CurrencyCode" >

  <xs:import schemaLocation="BaseTypes.xsd"
    namespace="http://www.xero.com/BaseTypes" /> 
  <xs:import schemaLocation="CurrencyCode.xsd"
    namespace="http://www.xero.com/CurrencyCode" /> 
  
  <xs:element name="Accounts" nillable="true" type="acct:ArrayOfAccount" />

  <xs:complexType name="ArrayOfAccount">
    <xs:sequence>
      <xs:element minOccurs="0" maxOccurs="unbounded" name="Account" nillable="true" type="acct:Account" />
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Account">
    <xs:all>
      <xs:element minOccurs="0" maxOccurs="1" name="ValidationErrors" type="base:ArrayOfValidationError" />
      <xs:element minOccurs="0" maxOccurs="1" name="Warnings" type="base:ArrayOfWarning" />
      
      <xs:element minOccurs="0" maxOccurs="1" name="AccountID" type="base:uniqueIdentifier" />
      <xs:element minOccurs="0" maxOccurs="1" name="Code" type="base:accountCode" />
      <xs:element minOccurs="0" maxOccurs="1" name="Name" type="base:accountName" />
      <xs:element minOccurs="0" maxOccurs="1" name="Status" type="base:accountStatus" />
      <xs:element minOccurs="0" maxOccurs="1" name="Type" type="base:accountType" />
      <xs:element minOccurs="0" maxOccurs="1" name="TaxType" type="base:taxType" />
      <xs:element minOccurs="0" maxOccurs="1" name="Description" type="xs:string" />
      <xs:element minOccurs="0" maxOccurs="1" name="Class" type="base:accountClass" />
      <xs:element minOccurs="0" maxOccurs="1" name="SystemAccount" type="base:accountSystemCode" />
      <xs:element minOccurs="0" maxOccurs="1" name="EnablePaymentsToAccount" type="xs:boolean" />
      <xs:element minOccurs="0" maxOccurs="1" name="ShowInExpenseClaims" type="xs:boolean" />
      <xs:element minOccurs="0" maxOccurs="1" name="BankAccountNumber" type="base:bankAccountNumber" />
      <xs:element minOccurs="0" maxOccurs="1" name="CurrencyCode" type="ccode:currencyCode" />
      <xs:element minOccurs="0" maxOccurs="1" name="ReportingCode" type="acct:reportCode" />
      <xs:element minOccurs="0" maxOccurs="1" name="ReportingCodeName" type="acct:reportCodeName" />
    </xs:all>
    <xs:attribute name="status" type="base:entityValidationStatus" use="optional" />
  </xs:complexType>

  <xs:simpleType name="reportCode">
    <xs:restriction base="xs:string">
      <xs:minLength value="1" />
      <xs:maxLength value="100" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="reportCodeName">
    <xs:restriction base="xs:string">
      <xs:maxLength value="100" />
    </xs:restriction>
  </xs:simpleType>
  
</xs:schema>