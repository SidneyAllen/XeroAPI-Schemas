<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="BrandingTheme"
    elementFormDefault="qualified"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://www.xero.com/BrandingTheme" 
    xmlns:brand="http://www.xero.com/BrandingTheme"  
    xmlns:base="http://www.xero.com/BaseTypes">

  <xs:import schemaLocation="BaseTypes.xsd"
    namespace="http://www.xero.com/BaseTypes" /> 

  <xs:element name="BrandingThemes" type="brand:ArrayOfBrandingTheme" />

  <!-- Branding Themes -->
  <xs:complexType name="ArrayOfBrandingTheme">
    <xs:sequence>
      <xs:element minOccurs="0" maxOccurs="unbounded" name="BrandingTheme" nillable="true" type="brand:BrandingTheme" />
    </xs:sequence>
  </xs:complexType>

  <!-- Branding Theme -->
  <xs:complexType name="BrandingTheme">
    <xs:all>
      <xs:element minOccurs="0" maxOccurs="1" name="ValidationErrors" type="base:ArrayOfValidationError" />
      <xs:element minOccurs="0" maxOccurs="1" name="Warnings" type="base:ArrayOfWarning" />

      <xs:element minOccurs="1" maxOccurs="1" name="BrandingThemeID" type="base:uniqueIdentifier" />
      <xs:element minOccurs="0" maxOccurs="1" name="Name" type="xs:string" />
      <xs:element minOccurs="0" maxOccurs="1" name="SortOrder" type="xs:integer" />
      <xs:element minOccurs="0" maxOccurs="1" name="CreatedDateUTC" type="xs:dateTime" />
    </xs:all>
    <xs:attribute name="status" type="base:entityValidationStatus" use="optional" />
  </xs:complexType>
  
</xs:schema>
