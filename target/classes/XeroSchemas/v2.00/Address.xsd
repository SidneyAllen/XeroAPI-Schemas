<?xml version="1.0" encoding="utf-8"?>
<xs:schema id="Address"
    elementFormDefault="qualified"
    xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    targetNamespace="http://www.xero.com/Address" 
    xmlns:add="http://www.xero.com/Address" 
    xmlns:base="http://www.xero.com/BaseTypes" >

  <xs:import schemaLocation="BaseTypes.xsd"
    namespace="http://www.xero.com/BaseTypes" />
  
  <xs:complexType name="Address">
    <xs:all>
      <xs:element minOccurs="0" maxOccurs="1" name="ValidationErrors" type="base:ArrayOfValidationError" />
      <xs:element minOccurs="0" maxOccurs="1" name="Warnings" type="base:ArrayOfWarning" />

      <xs:element minOccurs="0" maxOccurs="1" name="AddressType" type="add:addressType" />
      <xs:element minOccurs="0" maxOccurs="1" name="AddressLine1" type="add:addressLineType" />
      <xs:element minOccurs="0" maxOccurs="1" name="AddressLine2" type="add:addressLineType" />
      <xs:element minOccurs="0" maxOccurs="1" name="AddressLine3" type="add:addressLineType" />
      <xs:element minOccurs="0" maxOccurs="1" name="AddressLine4" type="add:addressLineType" />
      <xs:element minOccurs="0" maxOccurs="1" name="City" type="add:addressCityType" />
      <xs:element minOccurs="0" maxOccurs="1" name="Region" type="add:addressRegionType" />
      <xs:element minOccurs="0" maxOccurs="1" name="PostalCode" type="add:addressPostalCodeType" />
      <xs:element minOccurs="0" maxOccurs="1" name="Country" type="add:addressCountryType" />
      <xs:element minOccurs="0" maxOccurs="1" name="AttentionTo" type="add:addressAttentionToType" />

    </xs:all>
    <xs:attribute name="status" type="base:entityValidationStatus" use="optional" />
  </xs:complexType>
  
  <xs:complexType name="ArrayOfAddress">
    <xs:sequence>
      <xs:element minOccurs="0" maxOccurs="2" name="Address" nillable="true" type="add:Address" />
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="addressType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="POBOX" />
      <xs:enumeration value="STREET" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="addressLineType">
    <xs:restriction base="xs:string">
      <xs:maxLength value="500" />
    </xs:restriction>
  </xs:simpleType>
  
  <xs:simpleType name="addressCityType">
    <xs:restriction base="xs:string">
      <xs:maxLength value="255" />
    </xs:restriction>
  </xs:simpleType>
  
  <xs:simpleType name="addressRegionType">
    <xs:restriction base="xs:string">
      <xs:maxLength value="255" />
    </xs:restriction>
  </xs:simpleType>
  
  <xs:simpleType name="addressPostalCodeType">
    <xs:restriction base="xs:string">
      <xs:maxLength value="50" />
    </xs:restriction>
  </xs:simpleType>
  
  <xs:simpleType name="addressCountryType">
    <xs:restriction base="xs:string">
      <xs:maxLength value="50" />
    </xs:restriction>
  </xs:simpleType>
  
  <xs:simpleType name="addressAttentionToType">
    <xs:restriction base="xs:string">
      <xs:maxLength value="255" />
    </xs:restriction>
  </xs:simpleType>
  
</xs:schema>
