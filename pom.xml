                <executions>
                    <execution>
                        <id>schema-generate-1</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <forceRegenerate>true</forceRegenerate>
                            <generatePackage>com.xero.api</generatePackage>
                            <schemaIncludes>
                                <include>XeroSchemas/v2.00/Account.xsd</include>
                                <include>XeroSchemas/v2.00/Address.xsd</include>
                                <include>XeroSchemas/v2.00/ApiException.xsd</include>
