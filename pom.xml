                                <include>XeroSchemas/v2.00/BrandingTheme.xsd</include>
                                <include>XeroSchemas/v2.00/Contact.xsd</include>
                                <include>XeroSchemas/v2.00/Currency.xsd</include>
                                <include>XeroSchemas/v2.00/CurrencyCode.xsd</include>
                                <include>XeroSchemas/v2.00/Employee.xsd</include>
                                <include>XeroSchemas/v2.00/ExpenseClaim.xsd</include>
                                <include>XeroSchemas/v2.00/Invoice.xsd</include>
                                <include>XeroSchemas/v2.00/Items.xsd</include>
                                <include>XeroSchemas/v2.00/LineItem.xsd</include>
                                <include>XeroSchemas/v2.00/Organisation.xsd</include>
                                <include>XeroSchemas/v2.00/Phone.xsd</include>
                                <include>XeroSchemas/v2.00/Receipt.xsd</include>
                                <include>XeroSchemas/v2.00/Report.xsd</include>
                                <include>XeroSchemas/v2.00/Setting.xsd</include>
                                <include>XeroSchemas/v2.00/Setup.xsd</include>
                                <include>XeroSchemas/v2.00/TaxRate.xsd</include>
                                <include>XeroSchemas/v2.00/Timezone.xsd</include>
                                <include>XeroSchemas/v2.00/User.xsd</include>
                                <include>XeroSchemas/v2.00/RepeatingInvoice.xsd</include>
                            </schemaIncludes>
                            <bindingIncludes>
                                <include>XeroSchemas/v2.00/InvoiceOverride.xjb</include>
                            </bindingIncludes>
                            <extension>true</extension>
                            <args>
                                <arg>-Xinheritance</arg>
                            </args>
                            <plugins>
                                <plugin>
                                    <groupId>org.jvnet.jaxb2_commons</groupId>
                                    <artifactId>jaxb2-basics</artifactId>
                                    <version>0.6.4</version>
                                </plugin>
                            </plugins>
                        </configuration>
